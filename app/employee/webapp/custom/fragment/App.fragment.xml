<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:upload="sap.m.upload">
    <VBox id="i">
        <upload:UploadSet
            id="uploadSet"
            core:require="{ handler: 'employee/custom/fragment/App'}"
            instantUpload="false"
            uploadEnabled="true"
            afterItemAdded="handler.onAfterItemAdded"
            uploadCompleted="handler.onUploadCompleted"
            mode="MultiSelect"
            multiple="true"
            items="{
                path: '/Files',
                parameters: {
                    $orderby: 'createdAt desc'
                },
                templateShareable: false
            }"
        >
            <upload:toolbar>
                <!-- Add any toolbar elements here if needed -->
            </upload:toolbar>
            <upload:items>
                <upload:UploadSetItem id="up"
                    fileName="{fileName}"
                    mediaType="{mediaType}"
                    url="{url}"
                    enabledEdit="false"
                    visibleEdit="false"
                    openPressed="handler.onOpenPressed"
                >
                    <upload:attributes>
                        <ObjectAttribute
                            id="uploadBy"
                            title="Uploaded By"
                            text="{createdBy}"
                            active="false"
                        />
                        <ObjectAttribute
                            id="UploadOn"
                            title="Uploaded on"
                            text="{createdAt}"
                            active="false"
                        />
                        <ObjectAttribute
                            id="FileSize"
                            title="File Size"
                            text="{size}"
                            active="false"
                        />
                    </upload:attributes>
                </upload:UploadSetItem>
            </upload:items>
        </upload:UploadSet>
    </VBox>
</core:FragmentDefinition>